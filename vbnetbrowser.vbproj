<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <RootNamespace>vbnetbrowser</RootNamespace>
    <AssemblyName>vbnetbrowser</AssemblyName>
    <StartupObject>vbnetbrowser.Program</StartupObject>
    <Nullable>enable</Nullable>
    <ImplicitUsings>disable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Web.WebView2" Version="1.0.2277.86" />
    <PackageReference Include="System.Text.Json" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="src\Forms\MainForm.vb" />
    <Compile Include="src\Forms\MainForm.Designer.vb">
      <DependentUpon>MainForm.vb</DependentUpon>
    </Compile>
    <Compile Include="src\Forms\LoginForm.vb" />
    <Compile Include="src\Forms\LoginForm.Designer.vb">
      <DependentUpon>LoginForm.vb</DependentUpon>
    </Compile>
    <Compile Include="src\Forms\SettingsForm.vb" />
    <Compile Include="src\Forms\SettingsForm.Designer.vb">
      <DependentUpon>SettingsForm.vb</DependentUpon>
    </Compile>
    <Compile Include="src\Services\BookmarkService.vb" />
    <Compile Include="src\Services\ConfigService.vb" />
    <Compile Include="src\Models\Bookmark.vb" />
    <Compile Include="src\Models\AppConfig.vb" />
    <Compile Include="src\Program.vb" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="src\Forms\MainForm.resx">
      <DependentUpon>MainForm.vb</DependentUpon>
    </EmbeddedResource>
    <EmbeddedResource Include="src\Forms\LoginForm.resx">
      <DependentUpon>LoginForm.vb</DependentUpon>
    </EmbeddedResource>
    <EmbeddedResource Include="src\Forms\SettingsForm.resx">
      <DependentUpon>SettingsForm.vb</DependentUpon>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <None Update="data\*.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
